task "install" do
  exec("yarn install")
end

task "test" do
  exec("yarn test")
end

task "test:watch" do
  exec("yarn test:watch")
end

task "test:coverage" do
  exec("yarn test:coverage")
end

task "test:coverage:open" do
  exec("yarn test:coverage:open")
end

task "test:update:snapshot" do
  exec("yarn test:update:snapshot")
end

task "docs" do
  exec("yarn docs")
end

task "docs:open" do
  exec("yarn docs:open")
end
