{
  "env": {
    "browser": true,
    "es2021": true
  },
  "globals": {
    "globalThis": "readonly"
  },
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "requireConfigFile": true,
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": [
          "./"
        ],
        "extensions": [
          ".js"
        ]
      },
      "alias": {
        "map": [
          [
            "#root",
            "./"
          ]
        ],
        "extensions": [
          ".js"
        ]
      }
    }
  },
  "extends": [
    "eslint:recommended",
    "plugin:editorconfig/noconflict",
    "plugin:import/recommended",
    "plugin:json/recommended",
    "prettier"
  ],
  "plugins": [
    "editorconfig",
    "regex",
    "unused-imports"
  ],
  "rules": {
    "import/no-absolute-path": "off",
    "space-before-function-paren": [
      "error",
      "never"
    ],
    "standard/no-callback-literal": "off"
  },
  "overrides": [
    {
      "files": [
        "src/**/test/**"
      ]
    }
  ]
}
