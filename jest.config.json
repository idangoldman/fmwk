{
  "verbose": true,
  "watchPlugins": [
    "jest-runner-eslint/watch-fix"
  ],
  "projects": [
    {
      "displayName": "jest",
      "testEnvironment": "jsdom",
      "clearMocks": true,
      "moduleNameMapper": {
        "^\/(.*)$": "<rootDir>/src/$1"
      }
    },
    {
      "displayName": "eslint",
      "runner": "jest-runner-eslint",
      "testMatch": [
        "<rootDir>/src/**/*.{js,ts}"
      ]
    }
  ]
}
