{
  "verbose": true,
  "projects": [
    {
      "moduleNameMapper": {
        "^\/(.*)$": "<rootDir>/src/$1"
      },
      "displayName": "tests",
      "collectCoverageFrom": [
        "<rootDir>/src/**/*.js"
      ],
      "coveragePathIgnorePatterns": [
        "/node_modules/"
      ]
    },
    {
      "displayName": "eslint",
      "runner": "jest-runner-eslint",
      "testMatch": [
        "<rootDir>/src/**/*.js"
      ],
      "watchPlugins": [
        "jest-runner-eslint/watch-fix"
      ]
    }
  ]
}
